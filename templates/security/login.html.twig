{% extends 'base.html.twig' %}

{% block title %} Connexion! {% endblock %}
{% block body %}




    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
      <div class="container">
        <h2>Connexion</h2>
      </div>
    </div><!-- End Breadcrumbs -->

<!-- ======= Contact Section ======= -->
  <section id="contact" class="contact">


      <div class="container" data-aos="fade-up">

              <div class="row mt-5">
                <div class="col-lg-4">
                  <div class="info">
                    <div class="address">
                      <i class="bi bi-geo-alt"></i>
                      <h4>Adresse:</h4>
                      <p> {{Compagny.adress1}},<br>
                          {{Compagny.adress2}}<br>
                      </p>
                    </div>

                    <div class="email">
                      <i class="bi bi-envelope"></i>
                      <h4>Email:</h4>
                      <p>{{Compagny.email}}</p>
                    </div>

                    <div class="phone">
                      <i class="bi bi-phone"></i>
                      <h4>Call:</h4>
                      <p>{{Compagny.tel1}} / {{Compagny.tel2}} </p>
                    </div>

                  </div>

                </div>

                <div class="col-lg-5 mt-5 mt-lg-0">
                    <h2>Connexion</h2>
                    {% if error %}
                    <div class ="form-error-message">              
                        <span class="form-error-message" style =" color: red; font-size: 11">{{ error.messageKey | trans(error.messagedata, 'security') }}</span>
                    </div>
                    {% endif %}

                    <form action="{{path ("login")}}" method ="post"> 
                      <div class="mt-3">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" class="form-control" id="username" name="_username" required="required" class="form-control" value = "{{ lastusername }}" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text"></div>
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="_password" required="required">
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>

              </div>

            </div>
      
    </section><!-- End Contact Section -->
{% endblock %}

{% block footer %}
{% endblock %}