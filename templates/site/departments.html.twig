{% extends 'base.html.twig' %}
{% block courses %} active {% endblock %}

{% block title %} {{Compagny.Name}} {% endblock %}

{% block header %} {% endblock %}

{% block body %}

  <main id="main" data-aos="fade-in">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
      <div class="container">
        <h2>Nos Departements</h2>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Popular Courses Section ======= -->
    <section id="popular-courses" class="courses">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Nos Departements</h2>
          <p>Nos Departements</p>
        </div>

        <div class="row" data-aos="zoom-in" data-aos-delay="100">

        {% for department in departments %}
          <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
            <div class="course-item">
              <img src="{{DEPARTMENT_BASE_PATH}}{{department.imageUrl}}" class="img-fluid" alt="...">
              <div class="course-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h4>{{department.name}}</h4>
                </div>
                <p>{{department.description | raw}}</p>
                <div class="btn-wrap">
                    <a class="btn-buy" href="{{ path ('department', { 'id':department.id }) }}">Lire la suite &raquo;</a>
                </div>
              </div>
            </div>
          </div> <!-- End Course Item-->
        {% endfor %}
        </div>

      </div>
    </section><!-- End Popular Courses Section -->

  </main><!-- End #main -->

{% endblock %}

{% block footer %}
{% endblock %}