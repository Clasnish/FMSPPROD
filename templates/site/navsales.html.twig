{% extends 'base.html.twig' %}

{% block title %} Contactez nous {% endblock %}
{% block aboutus2 %} active {% endblock %}
{% block body %}

<div class="wrapper row3">
  <main class="hoc container clear"> 
    <!-- main body -->
    <!-- ################################################################################################ -->
    <div class="sidebar one_quarter first"> 
      <!-- ################################################################################################ -->
      <div class="sdb_holder">
        <h6>{{Compagny.Name}}</h6>
        <address>
        {{Compagny.adress1}}<br>
        {{Compagny.adress2}}<br>
        {{Compagny.city}} / {{Compagny.country}}<br>
        B.P. {{Compagny.pobox}} - {{Compagny.city}}<br>
        <br>
        Tel: {{Compagny.tel1}}<br>
        Email: <a href="#">{{Compagny.email}}</a>
        </address>
      </div>

    </div>
    <!-- ################################################################################################ -->
    <!-- ################################################################################################ -->
    <div class="content three_quarter"> 
    <div id="comments">
            {{ form_start(searchform) }}
                <div class="one_half first">
                    {{ form_widget (searchform.SerialNo) }}
                </div>
                <div class="sidebar one_half  "> 
                    {{ form_widget (searchform.Rechercher) }}
                </div>
            {{ form_end(searchform) }}
      </div>
    <div class="scrollable">
        <table>
          <thead>
            <tr>
              <th>No. article</th>
              <th>Nom article</th>
              <th>No. Serie</th>
              <th>Magasin</th>
            </tr>
          </thead>
          <tbody>

            {% for item in items %}
              <tr>
                <td>{{item.Item_No}}</td>
                <td>
                    {% for product in iteminfos %}
                      {% if item.Item_No == product.No %}
                        {{product.Description}}
                      {% endif %}
                    {% endfor %}
                </td>
                <td>{{item.Serial_No}}</td>
                <td>{{item.Location_Code}}</td>
              </tr>
            {% else %}
              <tr>
                <td>{{items.Item_No}}</td>
                <td>
                    {% for product in iteminfos %}
                      {% if items.Item_No == product.No %}
                        {{product.Description}}
                      {% endif %}
                    {% endfor %}
                </td>
                <td>{{items.Serial_No}}</td>
                <td>{{items.Location_Code}}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    <div class="clear"></div>
  </main>
</div>


{% endblock %}

{% block footer %}
{% endblock %}